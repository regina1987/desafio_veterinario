<p id="notice"><%= notice %></p>

<h1>Pets</h1>

<table  class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Dueño</th>
      <th>Race</th>
      <th>Dbay</th>
      <th>Visite a vet</th>
      <th>El peso promedio:</th>
      <th>La altura promedio:</th>
      <th>la altura máxima:</th>
      <th>el peso máximo</th>

      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pets.each do |pet| %>
      <tr>
        <td><%= pet.name %></td>
          <td><%= pet.cliente.name %></td>
        <td><%= pet.race %></td>
        <td><%= pet.dbay %></td>
          <td><%= pet.visite_vet %></td>
          <td><%= pet.peso_prom %></td>
          <td><%= pet.alto_prom %></td>
          <td><%= pet.altura_max %></td>
          <td><%= pet.peso_max %></td>
        <td><%= link_to 'Show', pet %></td>
        <td><%= link_to 'Edit', edit_pet_path(pet) %></td>
        <td><%= link_to 'Destroy', pet, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

